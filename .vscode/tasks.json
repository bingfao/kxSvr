{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build and debug client",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/FeKxClientTest.exe",
                "./KxClientTest.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "client Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build svr",
            "command": "cl.exe",
            "args": [
                "-D_WIN32_WINNT=0x0601",
                "-DUSING_PQ_DB_",
                "-ID:\\workspace\\asio\\asio\\include",
                "-ID:\\workspace\\libpqxx\\include",
                "-ID:\\workspace\\libpqxx\\build\\include",
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\KxSvr.exe",
                "./*.cc"
                ,
                "pqxx.lib",
                "libpq.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "svr Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}